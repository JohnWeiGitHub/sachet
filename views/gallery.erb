<% max_row_items = 3 %>
<% count = 0 %>

<% content.each do |data| %>
  <% if count % max_row_items == 0 %><div class="row-fluid"><% end %>

  <div class="thumb span4">
    <div class="row">
      <div class="name-display span11 offset1">
        <label>
          <input
            name="<%= group == 'step2' ? 'step2' : data['id']  %>"
            id="<%= data['id'] %>"
            value="<%= data['id'] %>"
            type="<%= data['input_type'] ? data['input_type'] : 'checkbox' %>" <%= 'checked' if data['checked'] %>
          >
          <label class="heading" for="<%= data['id'] %>"><%= data['brief'] %></label>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="span11 offset1">
        <p class="desc">
          <%= data['description'] %>.

          <% if data.has_key? 'web' %>
            <a target="_blank" href="<%= data['web'] %>">Learn more &rarr;</a>
          <% end %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="span12 thumb-container">
        <img src="<%= data['thumbnail'] %>" width="320" height="206">
      </div>
    </div>
  </div>

  <% count += 1 %>
  <% if count % max_row_items == 0 %></div><% end %>
<% end %>

<% if count % max_row_items != 0 %></div><% end %>
